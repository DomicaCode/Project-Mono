@model IEnumerable<Data.Entities.VehicleDto>

@{
    ViewData["Title"] = "Make view";
}

<h2>Make view</h2>

<p>
    <a asp-action="CreateMake">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abrv)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abrv)
            </td>
            <td>
                <a asp-action="EditMake" asp-route-id="@item.Id" class="btn btn-default">
                    <i class="glyphicon glyphicon-pencil"></i>  Edit
                </a>
                <a asp-action="DetailsMake" asp-route-id="@item.Id" class="btn btn-default">
                    <i class="glyphicon glyphicon-th-list"></i>  Details
                </a>
                <a asp-action="DeleteMake" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Jeste li sigurni da zelite obrisati ?');">
                    <i class="glyphicon glyphicon-trash"></i>  Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
